<h1>Listing Companies</h1>

<table>
  <thead>
    <tr>
      <th><%= Company.human_attribute_name(:name) %></th>
      <th><%= Company.human_attribute_name(:registry_number) %></th>
      <th><%= Company.human_attribute_name(:state_registration) %></th>
      <th><%= Company.human_attribute_name(:municipal_registration) %></th>
      <th><%= Company.human_attribute_name(:active) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.registry_number %></td>
        <td><%= company.state_registration %></td>
        <td><%= company.municipal_registration %></td>
        <td><%= company.active %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

